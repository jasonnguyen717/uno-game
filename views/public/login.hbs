<form method="POST" action="/auth/login" id="login-form">
    <h3 class="title">Log In</h3>

    <div class="mb-3 mt-3">
        <input class="input-box" placeholder="Username" name="username">
    </div>

    <div class="mt-3">
        <input class="input-box" type="password" placeholder="Password" name="password">
    </div>
    
    <div class="d-grid mx-auto mt-4 pt-2">
        <button type="submit" id="signin-btn" class="btn btn-primary" value="login">Log In</button>
    </div>
</form>

<br />
<div id="notreg">
    <p>Not registered? <a href="/auth/signup">Sign up!</a></p>
</div>
